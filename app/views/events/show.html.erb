<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading"><%= @event.name %></div>

    <div class="panel-body">

      <p>Address: <%= @event.location %></p>
      <p>Host: <%= @event.user.email %></p>

      <!-- Main Info -->
      <h4>Main Info</h4>
      <p>Event name: <%= @event.name %></p>
      <p>Event starts at: <%= @event.starts_at %></p>
      <p>Event ends at: <%= @event.ends_at %></p>
      <p>Event price: <%= @event.price %></p>
      <p>Event capacity: <%= @event.capacity %></p>


      <!-- About -->
      <h4>About</h4>
      <p><%= @event.description %></p>

      <!-- Extras -->
      <h4>Additional information</h4>
      <p> Event serves drinks: <%= @event.includes_drinks %></p>
      <p> Event serves food: <%= @event.includes_food %></p>


      <!-- Themes -->
      <h4>Subjects</h4>
      <% @subjects.each do |subject| %>
        <span class="label label-success"><%= subject.name %></span>
      <% end %>

    </div>

  </div>

  <%= link_to "Back", event_path, class: "btn btn-default" %>
</div>
